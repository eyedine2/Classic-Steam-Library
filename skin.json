{
    "Conditions": {
        "2015 Theme": {
            "default": "no",
            "description": "Bluer but still old",
            "values": {
                "no": {
                    "TargetCss": {
                        "affects": [ ".*" ],
                        "src": "2013steam/vars2013.css"
                    }
                },
                "yes": {
                    "TargetCss": {
                        "affects": [ ".*" ],
                        "src": "2015steam/vars2015.css"
                    }
                }
            }
        }
    },
    "Configuration": [
        {
            "Name": "2015 Theme",
            "ToolTip": "Bluer but still old",
            "Type": "CheckBox",
            "Value": false
        }
    ],
    "Patches": [
        {
            "MatchRegexString": "^Steam$",
            "TargetCss": "libraryroot.custom.css",
            "TargetJs": "libraryroot.custom.js"
        },
        {
            "MatchRegexString": ".*",
            "Statement": [
                {
                    "Equals": true,
                    "False": {
                        "TargetCss": "2013steam/vars2013.css"
                    },
                    "If": "2015 Theme",
                    "True": {
                        "TargetCss": "2015steam/vars2015.css"
                    }
                }
            ]
        }
    ],
    "Steam-WebKit": "webkit.css",
    "UseDefaultPatches": true,
    "author": "naii_",
    "description": "Brings Steam's 2013 & 2015 looks to the modern day",
    "discord_support": {
        "inviteCodeExcludingLink": "9VAEuGT"
    },
    "funding": {
        "kofi": "naii_"
    },
    "github": {
        "owner": "eyedine2",
        "repo_name": "Classic-Steam-Library"
    },
    "header_image": "https://imgup.uk/proxy/?url=i.imgur.com/05lFTXw.png",
    "name": "Classic Steam Library",
    "source": "https://github.com/eyedine2/Classic-Steam-Library/tree/main",
    "splash_image": "https://imgup.uk/proxy/?url=i.imgur.com/05lFTXw.png",
    "tags": [
        "Dark",
        "Classic"
    ],
    "version": "1.0"
}
